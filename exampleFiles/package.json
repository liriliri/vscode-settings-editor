{
  "name": "vscode-settings-editor",
  "displayName": "Settings Editor",
  "description": "VS Code visual editor for settings like npm package.json",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:settingsEditor.settingsedit",
    "onCommand:settingsEditor.openFile"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node .esbuild.config.js",
    "format": "prettier \"*.{js,json}\" \"src/**/*.ts\" \"media/**/*.ts\" \"exampleFiles/*.json\" --write",
    "watch": "node .esbuild.config.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "^0.16.17",
    "esbuild-sass-plugin": "^2.4.5",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "licia": "^1.37.1",
    "luna-setting": "^0.3.0",
    "mocha": "^10.1.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.3"
  }
}
